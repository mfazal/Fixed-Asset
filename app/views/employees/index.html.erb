<div class="page-header">
  <%= link_to new_employee_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Employee
  <% end %>
  <h1>Listing employees</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Code</th>
            <th>Fullname</th>
            <th>Emailid</th>
            <th>Contactnum</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @employees) do |employee| %>
            <td><%= employee.code %></td>
            <td><%= employee.fullname %></td>
            <td><%= employee.emailid %></td>
            <td><%= employee.contactnum %></td>
            <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
