<%= form_for(@asset, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @asset.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</h4>

      <ul>
      <% @asset.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :category_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => true, :class => "form-control" )%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :brand_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:brand_id, Brand.all, :id, :name, :prompt => true, :class => "form-control" )%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :model, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :model, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :serialnum, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :serialnum, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :purchase_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :purchase_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :qty, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :qty, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :custodian_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:custodian_id, Custodian.all, :id, :employee_id, :prompt => true, :class => "form-control" )%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :employee_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:employee_id, Employee.all, :id, :fullname, :prompt => true, :class => "form-control" )%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
